<div class="row submit">
    <div class="col-md-12">
        <form id="create-form">
            <div class="form-group">
                <label for="product-name">Product Name</label>
                <input type="text" class="form-control" id="product-name" placeholder="Product Name" />

                <label for="inventory-description">Description</label>
                <input type="text" class="form-control" id="inventory-description" placeholder="Description" />

                <label for="inventory-price">Price</label>
                <input type="text" class="form-control" id="inventory-price" placeholder="Price" />

                <label for="inventory-quantity">Quantity</label>
                <input type="text" class="form-control" id="inventory-quantity" placeholder="Quantity" />

                <input type="file" name="file" id="input-files" class="btn btn-info add-photo"
                    accept=".jpg, .png, .jpeg|image/*" />
                <br>
                <button type="submit-form" class="btn subFormClick btn-primary">Submit</button>
            </div>
            {{!-- <button type="submit" class="btn btn-info add-photo">Add photo</button> --}}
        </form>
    </div>
</div>

<div class="row product">
    {{!-- <div class="col-auto products"> --}}
        {{#each products}}
        <div class="col-auto card" id="item-card" style="width: 18rem;">
            <img class="card-img-top" src="{{dataValues.product_url}}" alt="Card image cap" />
            <div class="card-body">
                <h5 class="card-title">{{dataValues.product_name}}</h5>
                <p class="card-text">
                    {{dataValues.product_description}}
                </p>
                <p class="card-text">{{dataValues.selling_price}}
                </p>
                <p class="card-text">Inventory: {{dataValues.inventory}}</p>
                <br>
                <button class="delete-item" data-id="{{dataValues.id}}"><i class="far fa-trash-alt"></i></button>
            </div>
        </div>
        {{/each}}
        {{!--
    </div> --}}
</div>

<script src="js/inventory.js"></script>

