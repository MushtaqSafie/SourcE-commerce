<div class="row" id="sales-chart">
    <div class="col-auto">
        <div class="charts" id="container" style="width:100%; height:400px;">
            {{salesChart}}
        </div>
    </div>
</div>

<div class="row" id="sales-table">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Order Id</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{customerName}}</td>
                <td>{{productName}}</td>
                <td>{{price}}</td>
                <td>{{quantity}}</td>
                <td>{{total}}</td>
                <td>{{date}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="js/dashboard.js"></script>